<!DOCTYPE html>
<html>
  <head>
    <title>Làm thiệp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'scaffolds', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'bootstrap', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'use_bootstrap', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'custom' %>
  </head>

  <body>
    <% if @public_flg.to_i != 1 %>
      <%= render "./layouts/navbar.html.erb" %>
    <% end %>

    <% if notice.present? || alert.present? %>
      <div class="container-fluid">
        <% if notice.present? %>
          <div class="alert alert-success" role="alert">
            <%= notice %>
          </div>
        <% end %>

        <% if alert.present? %>
          <div class="alert alert-danger" role="alert">
            <%= alert %>
          </div>
        <% end %>
      </div>
    <% end %>
    <%= yield %>
  </body>
  <%= javascript_include_tag 'lib/jquery_slim', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'lib/bootstrap_bundle', media: 'all', 'data-turbolinks-track': 'reload' %>
</html>
