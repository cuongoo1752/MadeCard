<div class="container d-flex justify-content-center d-flex align-items-center" style="height: 75vh;">
  <div>
    <%= image_tag("logo/logo_2.png", size: "50x50", alt: "Edit Entry") %>
    <h5 class="pt-3 pb-2"><b>Thông tin đăng ký</b></h5>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email, "Địa chỉ email" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "Mật khẩu" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <% if @minimum_password_length %>
          <small id="emailHelp" class="form-text text-muted">(Tối thiểu <%= @minimum_password_length %> ký tự)</small>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Xác nhận mật khẩu" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Đăng ký", class: "btn btn-light" %>
      </div>
      <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>
