<div class="container d-flex justify-content-center d-flex align-items-center" style="height: 75vh;">
  <div>
    <%= image_tag("logo/logo_2.png", size: "50x50", alt: "Edit Entry") %>
    <h5 class="pt-3 pb-2"><b>Quên mật khẩu?</b></h5>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email, "Địa chỉ email" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Gửi hướng dẫn đặt lại mật khẩu", class: "btn btn-light" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
