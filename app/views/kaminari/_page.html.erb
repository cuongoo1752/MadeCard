<% if page.current? %>
  <li class="page-item active page-item-custom">
    <%= content_tag :a, page, data: { remote: remote }, rel: page.rel, class: 'page-link page-link-custom' %>
  </li>
<% else %>
  <li class="page-item page-item-custom">
    <%= link_to page, url, remote: remote, rel: page.rel, class: 'page-link page-link-custom' %>
  </li>
<% end %>
