<div class="container">
  <%= form_with(model: fix_font) do |form| %>
    <div class="d-flex justify-content-between p-3">
      <div class="">
        <h3>Thông tin font chữ</h3>
      </div>

      <div class="">
        <%= form.submit title, {class: "btn btn-light"}%>
      </div>
    </div>

    <% if fix_font.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(fix_font.errors.count, "error") %> prohibited this fix_font from being saved:</h2>

        <ul>
          <% fix_font.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group row">
      <%= form.label :title, value: "Tên font chữ", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= form.text_field :title %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :font, value: "Tải font chữ", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= form.file_field :font %>
      </div>
    </div>

    <% if fix_font.font? %>
      <div class="form-group row">
        <%= form.label :font, value: "Font chữ hiển thị", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <style>
            @font-face {
              font-family: '<%= fix_font.title %>';
              src: url('<%= fix_font.font.url %>');
            }
          </style>
          <p class="fake-text" style="font-family: '<%= fix_font.title %>';">
            <%= @fake_text %>
          </p>
        </div>
      </div>
    <% end %>
  <% end %>
  <%= link_to 'Trở về', fix_fonts_path %>
</div>
