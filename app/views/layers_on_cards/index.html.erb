<h1>Layers On Cards</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Card</th>
      <th>Layer</th>
      <th>Layer type</th>
      <th>Status</th>
      <th>Order</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @layers_on_cards.each do |layers_on_card| %>
      <tr>
        <td><%= layers_on_card.name %></td>
        <td><%= layers_on_card.card_id %></td>
        <td><%= layers_on_card.layer_id %></td>
        <td><%= layers_on_card.layer_type %></td>
        <td><%= layers_on_card.status %></td>
        <td><%= layers_on_card.order %></td>
        <td><%= layers_on_card.user_id %></td>
        <td><%= link_to 'Show', layers_on_card %></td>
        <td><%= link_to 'Edit', edit_layers_on_card_path(layers_on_card) %></td>
        <td><%= link_to 'Destroy', layers_on_card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Layers On Card', new_layers_on_card_path %>
