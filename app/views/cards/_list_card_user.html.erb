<table class="table">
  <thead>
    <tr>
      <th scope="col">Trạng thái</th>
      <th scope="col">Địa chỉ thiệp công khai</th>
      <th scope="col">Chỉnh sửa</th>
      <th scope="col">Xóa</th>
    </tr>
  </thead>
  <tbody>
      <% @cards.each do |card| %>
        <% 
          layers = LayersOnCard.where(card_id: card.id, status: 1)
          email_user = User.find_by(id: card.user_id).email
        %>

        <tr>
          <td><%= card.is_public ? "Công khai" : "Không công khai" %></td>
          <td>
            <%= link_to design_cards_url(card_id: card.id, public: 1), design_cards_url(card_id: card.id, public: 1) %>
          </td>
          <td>
            <%= link_to 'Chi tiết', design_cards_path(card_id: card.id), class: "btn btn-light" %>
          </td>
          <td>
            <%= button_to 'Xóa', card, method: :delete, class: "btn btn-light btn-delete", data: { confirm: 'Bạn có chắc không?' } %>
          </td>
        </tr>
      <% end%>
  </tbody>
</table>

<div class="card" style="width: 18rem;">
  <img class="card-img-top" src="..." alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title">Card title</h5>
    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    <a href="#" class="btn btn-primary">Go somewhere</a>
  </div>
</div>

<%= paginate @cards %>

<br>

<%= link_to 'Tạo thiệp mới', design_cards_path, class: "btn btn-link m-2" %>
